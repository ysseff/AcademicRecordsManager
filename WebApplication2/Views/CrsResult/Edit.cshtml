@model WebApplication2.Models.CrsResult
<!DOCTYPE html>

@{
    SelectList crs = new SelectList(ViewBag.Crs, "CourseId", "Name");
    SelectList stds = new SelectList(ViewBag.Stds, "StudentId", "Name");
}

<html>
<head>
    <title>Edit</title>
</head>
<body>
<form action="/CrsResult/EditSave" method="post">
    <div class="form-group">
        <input asp-for="CrsResultId" type="hidden"/>
        <label asp-for="StudentId"></label>
        <select class="form-control" asp-for="StudentId" asp-items="stds"></select>
    </div>
    <div class="form-group">
        <label asp-for="CourseId"></label>
        <select class="form-control" asp-for="CourseId" asp-items="crs"></select>
    </div>
    <div class="form-group">
        <label asp-for="Degree"></label>
        <input asp-for="Degree" class="form-control"/>
        <span asp-validation-for="Degree" class="text-danger"></span>
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="GetAll" asp-controller="CrsResult" class="btn btn-outline-secondary">Cancel</a>
</form>
</body>
</html>
@section Scripts 
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script> 
}