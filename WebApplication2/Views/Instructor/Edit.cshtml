@model WebApplication2.Models.Instructor
<!DOCTYPE html>

@{
    SelectList depts = new SelectList(ViewBag.depts, "DepartmentId", "Name");
}

<html>
<head>
    <title>Instructor Edit</title>
</head>
<body>
<form action="/Instructor/EditSave" method="post">
    <div class="form-group">
        <input type="hidden" value="@Model.InstructorId" name="InstructorId">
        <label for="instructorName">Name</label>
        <input type="text" class="form-control" id="instructorName" placeholder="Enter Name" value="@Model?.Name" name="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="instructorSalary">Salary</label>
        <input type="text" class="form-control" id="instructorSalary" placeholder="Salary" value="@Model?.Salary" Name="Salary">
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartmentId">DeptId</label>
        <select class="form-control" asp-for="DepartmentId" asp-items="depts"></select>
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="GetAll" asp-controller="Instructor" class="btn btn-outline-secondary">Cancel</a>
</form>
</body>
</html>
@section Scripts 
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script> 
}