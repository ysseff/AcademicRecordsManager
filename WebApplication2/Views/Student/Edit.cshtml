@model WebApplication2.Models.Student
<!DOCTYPE html>

@{
    SelectList depts = new SelectList(ViewBag.depts, "DepartmentId", "Name");
    SelectList grades = new SelectList(ViewBag.NumberOptions);
}

<html>
<head>
    <title>Edit</title>
</head>
<body>
<form action="/Student/EditSave" method="post">
    <div class="form-group">
        <input asp-for="StudentId" type="hidden"/>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control"/>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartmentId"></label>
        <select class="form-control" asp-for="DepartmentId" asp-items="depts"></select>
    </div>
    <div class="form-group">
        <label asp-for="Grade"></label>
        <select asp-for="Grade" asp-items="@grades" class="form-control"></select>
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="GetAll" asp-controller="Student" class="btn btn-outline-secondary">Cancel</a>
</form>
</body>
</html>
@section Scripts 
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script> 
}